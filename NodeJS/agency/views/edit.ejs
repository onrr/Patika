<%- include('partials/_header') -%>
    <body id="page-top">
        <section class="page-section" id="contact">
            <div class="container">
                <div class="text-center">
                    <h2 class="section-heading text-uppercase">Edit The Project</h2>
                </div>
                <form id="contactForm" method="POST" action="/photos/<%= photo._id %>?_method=PUT" encType="multipart/form-data">
                    <div class="row align-items-center mb-5" style="flex-direction: column;">
                        <div class="col-md-6">
                            <div class="form-group">
                                <!-- title input-->
                                <input class="form-control" id="name" name="title" value="<%= photo.title %>"  type="text" required data-sb-validations="required" />
                                <div class="invalid-feedback" data-sb-feedback="name:required">Project Title</div>
                            </div>

                        </div>
                        <div class="col-md-6">
                            <div class="form-group form-group-textarea mb-md-0">
                                <!-- Message input-->
                                <textarea class="form-control" id="message" name="description" required data-sb-validations="required"><%= photo.description %></textarea>
                                <div class="invalid-feedback" data-sb-feedback="message:required">Project Description</div>
                            </div>
                            <div class="form-group">
                                <input type="file" name="image" class="form-control rounded-0" required >
                              </div>
                        </div>
                        
                    </div>
                    <div class="text-center"><button class="btn btn-primary btn-xl text-uppercase" id="submitButton" type="submit">Edit This Project</button></div>
                </form>
            </div>
        </section>
    </body>
</html>