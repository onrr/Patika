<%- include('partials/_header') -%>

<section class="page-section" id="contact">
    <div class="container">
        <h2 class="page-section-heading text-center text-uppercase text-secondary mt-3 mb-5">Edit The Project</h2>

        <!-- Edit Section Form-->
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-7">
                <form id="contactForm" method="POST" action="/portfolios/<%= portfolios._id %>?_method=PUT">
                    <!-- Title input-->
                    <div class="form-floating mb-3">
                        <input class="form-control" id="title" name="title" value="<%= portfolios.title %>"
                        type="text" required data-sb-validations="required"/>
                        <label for="name">Full name</label>
                        <div class="invalid-feedback" data-sb-feedback="name:required">A title is required.</div>
                    </div>
                    <!-- Descrtiption input-->
                    <div class="form-floating mb-3">
                        <textarea class="form-control" id="description" name="description" required
                        data-sb-validations="required"><%= portfolios.description %></textarea>
                        <label for="message">Description</label>
                        <div class="invalid-feedback" data-sb-feedback="message:required">A description is required.
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="file" name="file" class="form-control rounded-0" required>
                        <label for="name">Image</label>
                        <div class="invalid-feedback" data-sb-feedback="name:required">A image is required.</div>
                    </div>
                    <!-- Submit error message-->
                    <!---->
                    <!-- This is what your users will see when there is-->
                    <!-- an error submitting the form-->
                    <div class="d-none" id="submitErrorMessage">
                        <div class="text-center text-danger mb-3">Error sending message!</div>
                    </div>
                    <!-- Submit Button-->
                    <button class="btn btn-primary btn-xl mt-3" id="submitButton" type="submit">Edit This Project</button>
                </form>
            </div>
        </div>
    </div>
</section>
    </body>

    </html>