<%- include('partials/_header'); %>

    <%- include('partials/_navigation'); %>

        <% if (user) { %>
            <div class="all-title-box">
                <div class="container text-center mt-5 mb-5 py-3 border-bottom border-top d-flex flex-column">
                    <h1>
                        <%= user.name %>'s Profile
                    </h1>
                    <span class="text-body-secondary">
                        <%= user.role %>
                    </span>
                    <% if (user.role==='teacher' ) { %>
                        <!-- Modal Button -->
                        <div class="col-lg-12 text-center mt-3">
                            <button class="btn btn-lg btn-outline-secondary rounded-0 text-white" href="#"
                                data-toggle="modal" data-target="#addCourse"><span>CREATE NEW
                                    COURSE</span></button>
                        </div>

                        <!-- ADD Modal -->
                        <div class="modal fade" id="addCourse" tabindex="-1" role="dialog"
                            aria-labelledby="myModalLabel">
                            <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                                <div class="modal-content">
                                    <div class="modal-body customer-box">
                                        <!-- Tab panes -->
                                        <div class="tab-content">
                                            <div class="tab-pane active" id="Login">
                                                <form method="POST" action="/courses" class="form-horizontal">
                                                    <div class="form-group container">
                                                        <div class="col-sm-12 mb-2">
                                                            <input type="text" name="name" class="form-control"
                                                                placeholder="Course Name">
                                                        </div>
                                                        <div class="form-group">
                                                            <div class="col-sm-12">
                                                                <input type="hidden" name="role" class="form-control"
                                                                    value="<%= user.role %>">
                                                            </div>
                                                            <div class="form-group">
                                                                <div class="col-sm-12">
                                                                    <textarea rows="8" name="description"
                                                                        class="form-control"
                                                                        placeholder="Course Description"
                                                                        required></textarea>
                                                                </div>
                                                                <div class="row mt-3 pl-3">
                                                                    <div class="col-sm-12 d-flex">
                                                                        <button type="submit"
                                                                            class="btn btn-light btn-radius btn-brd grd1">
                                                                            Add
                                                                        </button>
                                                                        <button type="submit"
                                                                            class="btn btn-light btn-radius btn-brd grd1"
                                                                            data-dismiss="modal" aria-hidden="true">
                                                                            Cancel
                                                                        </button>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <% } %>
                </div>
            </div>

            <div id="overviews" class="section wb">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 blog-post-single">
                            <div class="blog-author">
                                <div class="author-bio">
                                    <h3 class="author_name"><a href="#">
                                            <%= user.name %>
                                        </a>
                                    </h3>
                                    <h5>
                                        <%= user.email %>
                                    </h5>
                                    <p class="author_det">
                                        Lorem ipsum dolor sit amet, consectetur adip,
                                        sed do eiusmod tempor
                                        incididunt ut
                                        aut reiciendise voluptat maiores alias
                                        consequaturs aut perferendis
                                        doloribus omnis
                                        saperet docendi nec, eos ea alii molestiae
                                        aliquand.
                                    </p>
                                </div>
                                <!-- <div class="author-desc">
                                            <img src="images/tra0.jpg" alt="about author">
                                        </div> -->
                            </div>

                        </div><!-- end col -->
                    </div><!-- end row -->
                    <div class="row mt-5">
                        <% for (let i=0; i < courses.length; i++) { %>
                            <div class="col-lg-6 col-md-6 col-12">
                                <div class="course-item mb-5">
                                    <div class="image-blog">
                                        <img src="/images/tra0.jpg" style="width: 600px;" alt="" class="img-fluid">
                                    </div>
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="course-br">
                                            <div class="course-title mt-3">
                                                <h2><a href="/courses/<%= courses[i].slug %>" title="">
                                                        <%= courses[i].name %>
                                                    </a></h2>
                                            </div>
                                            <div class="course-desc">
                                                <p>
                                                    <%= courses[i].description %>
                                                </p>
                                            </div>
                                        </div>
                                        <div class="course-br d-flex align-items-center  mt-3 mr-1">
                                            <div class="course-title mr-2">
                                                <a href="/courses/<%= courses[i].slug %>?_method=DELETE"
                                                    class="btn btn-md btn-danger text-white"
                                                    onclick="return confirm('Are You Sure?')"><i
                                                        class="fa-solid fa-trash"></i></a>
                                            </div>
                                            <div class="course-desc">
                                                <button class="btn btn-md btn-warning text-white" data-toggle="modal"
                                                    data-target="#updateCourse<%= courses[i]._id %>"><i
                                                        class="fa-solid fa-pen"></i></button>
                                            </div>
                                        </div>

                                        <!-- UPDATE Modal -->
                                        <div class="modal fade" id="updateCourse<%= courses[i]._id %>" tabindex="-1"
                                            role="dialog" aria-labelledby="myModalLabel">
                                            <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-body customer-box">
                                                        <!-- Tab panes -->
                                                        <div class="tab-content">
                                                            <div class="tab-pane active" id="Login">
                                                                <form method="POST"
                                                                    action="/courses/<%= courses[i].slug %>?_method=PUT"
                                                                    class="form-horizontal">
                                                                    <div class="form-group container">
                                                                        <div class="col-sm-12 mb-2">
                                                                            <input type="text" name="name"
                                                                                class="form-control"
                                                                                value="<%= courses[i].name %>"
                                                                                placeholder="Course Name">
                                                                        </div>
                                                                        <div class="form-group">
                                                                            <div class="col-sm-12">
                                                                                <input type="hidden" name="role"
                                                                                    class="form-control"
                                                                                    value="<%= user.role %>">
                                                                            </div>
                                                                            <div class="form-group">
                                                                                <div class="col-sm-12">
                                                                                    <textarea rows="8"
                                                                                        name="description"
                                                                                        class="form-control"
                                                                                        placeholder="Course Description"
                                                                                        required>
                                                                                        <%= courses[i].description %></textarea>
                                                                                </div>
                                                                                <div class="row mt-3 pl-3">
                                                                                    <div class="col-sm-12 d-flex">
                                                                                        <button type="submit"
                                                                                            class="btn btn-light btn-radius btn-brd grd1">
                                                                                            UPDATE
                                                                                        </button>
                                                                                        <button type="submit"
                                                                                            class="btn btn-light btn-radius btn-brd grd1"
                                                                                            data-dismiss="modal"
                                                                                            aria-hidden="true">
                                                                                            Cancel
                                                                                        </button>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div><!-- end col -->
                            <% } %>
                                <div class="row mt-5">
                                    <% if (user.role==='student' ) { %>
                                        <h3>Courses Enrolled (<%= user.courses.length %>)</h3>
                                        <% for (let i=0; i < user.courses.length; i++) { %>
                                            <div class="col-lg-6 col-md-6 col-12">
                                                <div class="course-item mb-5">
                                                    <div class="image-blog">
                                                        <img src="/images/tra0.jpg" alt="" style="width: 600px;"
                                                            class="img-fluid">
                                                    </div>
                                                    <div
                                                        class="course-br d-flex align-items-center justify-content-between">
                                                        <div>
                                                            <div class="course-title mt-3">
                                                                <h2><a href="/courses/<%= user.courses[i].slug %>"
                                                                        title="">
                                                                        <%= user.courses[i].name %>
                                                                    </a></h2>
                                                            </div>
                                                            <div class="course-desc">
                                                                <p>
                                                                    <%= user.courses[i].description %>
                                                                </p>
                                                            </div>
                                                        </div>
                                                        <form method="POST" action="/courses/release">
                                                            <input type="hidden" name="course_id"
                                                                value="<%= user.courses[i]._id %>">
                                                            <button class="btn btn-lg btn-danger text-white">
                                                                <span>RELEASE</span>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div><!-- end col -->
                                                <% } %>
                                                    <% } %>
                                            </div>
                                </div><!-- end row -->
                    </div><!-- end container -->
                </div><!-- end section -->
                <% } %>

                    <% if (!user) { %>
                        <div class="mt-5">
                            <h1 class="text-center display-4">NO ACCESS</h1>
                        </div>

                        <% } %>

                            <%- include('partials/_footer'); %>